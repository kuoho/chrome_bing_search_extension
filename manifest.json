{
  "name": "chrome bing search extension",
  "description": "Bing 搜索插件",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "management"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "bing.png",
    "default_title": "打开 Bing 搜索主页"
  }
}