{
  "name": "chrome bing search extension",
  "description": "Bing 搜索插件",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "management"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon_bing_16X16.png",
      "24": "images/icon_bing_24X24.png",
      "32": "images/icon_bing_32X32.png",
      "48": "images/icon_bing_48X48.png"
    },
    "default_title": "打开Bing搜索主页"
  },
  "icons": {
    "16": "images/icon_bing_16X16.png",
    "24": "images/icon_bing_24X24.png",
    "32": "images/icon_bing_32X32.png",
    "48": "images/icon_bing_48X48.png",
    "128": "images/icon_bing_128X128.png"
  }
}